{
    "extends": "recommended-jenkinsfile",
    "rules": {
        "CompileStatic": {
            "enabled": false
        },
        "DuplicateNumberLiteral": {
            "enabled": false
        },
        "DuplicateStringLiteral": {
            "enabled": false
        },
        "FileEndsWithoutNewline": {
            "enabled": false
        },
        "InvertedIfElse": {
            "enabled": false
        },
        "MethodParameterTypeRequired": {
            "enabled": false
        },
        "MethodReturnTypeRequired": {
            "enabled": false
        },
        "NestedBlockDepth": {
            "enabled": false
        },
        "NoDef": {
            "enabled": false
        },
        "UnnecessaryGetter": {
            "enabled": false
        },
        "VariableTypeRequired": {
            "enabled": false
        },
        "formatting.Indentation": {
            "spacesPerIndentLevel": 4,
            "severity": "info"
        }
    }
}